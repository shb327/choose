<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:paddingBottom="100dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="222dp"
        android:background="@drawable/header2"
        app:layout_anchor="@+id/nestedScrollView"
        app:layout_anchorGravity="top" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="190dp"
        android:layout_marginBottom="24dp"
        app:layout_anchor="@+id/nestedScrollView"
        app:layout_anchorGravity="top|center"
        android:paddingTop="20dp">

        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tabLayout"
            app:tabSelectedTextColor="#205072"
            app:tabTextColor="#329D9C"
            android:gravity="top"
            app:tabMode="fixed"
            app:tabGravity="fill">
        </com.google.android.material.tabs.TabLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:gravity="top"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </LinearLayout>

    <TextView
        android:id="@+id/welcome"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="22dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Welcome on Board Vladick!"
        android:textColor="#205072"
        android:textSize="22sp"
        app:layout_anchor="@+id/nestedScrollView"
        app:layout_anchorGravity="start|top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="346dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/montserrat"
        android:text="Your target for today is to keep positive mindset and smile to everyone you meet."
        android:textColor="#68B2A0"
        android:textSize="16sp"
        app:layout_anchor="@+id/nestedScrollView"
        app:layout_anchorGravity="start|top"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <FrameLayout
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="18dp"
        app:layout_anchor="@+id/nestedScrollView"
        app:layout_anchorGravity="end|top">
        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:srcCompat="@drawable/ic_round_person"
            android:layout_gravity="center|center"/>
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/empty_circle_white"/>
    </FrameLayout>

    <Button
        android:id="@+id/textButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="#205072"
        android:fontFamily="@font/montserrat_bold"
        android:text="Liked"
        android:textColor="@color/white"
        app:cornerRadius="14dp"
        app:icon="@drawable/ic_round_like_24" />

    <Button
        android:id="@+id/textButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="142dp"
        android:layout_marginTop="150dp"
        android:backgroundTint="#329D9C"
        android:fontFamily="@font/montserrat_bold"
        android:text="Saved"
        android:textColor="@color/white"
        app:cornerRadius="14dp"
        app:icon="@drawable/ic_icon_24" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>

