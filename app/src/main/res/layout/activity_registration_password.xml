<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ui.login.LoginActivity">

<ImageView
    android:id="@+id/imageView"
    android:layout_width="97dp"
    android:layout_height="88dp"
    android:layout_marginTop="4dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:srcCompat="@drawable/image" />

<TextView
    android:id="@+id/textView"
    android:layout_width="218dp"
    android:layout_height="66dp"
    android:layout_marginTop="20dp"
    android:fontFamily="@font/montserrat_bold"
    android:gravity="center_horizontal"
    android:text="Take a Moment to Secure Yourself"
    android:textAlignment="center"
    android:textColor="#205072"
    android:textSize="22sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.497"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="213dp"
    android:layout_height="53dp"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp"
    android:fontFamily="@font/montserrat"
    android:text="Do no overthink it, can be literally whatever you like."
    android:textAlignment="center"
    android:textColor="#68B2A0"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView" />

<com.kofigyan.stateprogressbar.StateProgressBar
    android:id="@+id/your_state_progress_bar_id"
    android:layout_width="211dp"
    android:layout_height="27dp"
    android:layout_marginTop="122dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/outlinedTextField2"
    app:spb_animateToCurrentProgressState="true"
    app:spb_checkStateCompleted="true"
    app:spb_currentStateDescriptionColor="#68B2A0"
    app:spb_currentStateNumber="five"
    app:spb_maxStateNumber="five"
    app:spb_stateBackgroundColor="#CDE0C9"
    app:spb_stateDescriptionColor="#808080"
    app:spb_stateForegroundColor="#68B2A0"
    app:spb_stateLineThickness="2dp"
    app:spb_stateNumberBackgroundColor="#ffffff"
    app:spb_stateNumberForegroundColor="#ffffff" />

<com.google.android.material.button.MaterialButton
    android:id="@+id/next_one_btn"
    android:layout_width="256dp"
    android:layout_height="54dp"
    android:layout_marginTop="20dp"
    android:background="@drawable/login_button"
    android:elevation="5dp"
    android:fontFamily="@font/montserrat_bold"
    android:text="FINISH"
    android:textColor="#FFF"
    android:textSize="18sp"
    app:backgroundTint="@null"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.496"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/your_state_progress_bar_id" />

<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/outlinedTextField"
    android:theme="@style/TextInputLayoutStyle"
    android:layout_width="256dp"
    android:layout_height="54dp"
    android:layout_marginTop="92dp"
    android:ems="10"
    android:fontFamily="@font/montserrat"
    app:boxStrokeColor="#56C596"
    android:textColorHint="#56C596"
    android:textColor="#56C596"
    app:hintTextColor="#56C596"
    android:inputType="textPassword"
    android:hint="Enter Password"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView2"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <com.google.android.material.textfield.TextInputEditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</com.google.android.material.textfield.TextInputLayout>

<com.google.android.material.textfield.TextInputLayout
    android:id="@+id/outlinedTextField2"
    android:theme="@style/TextInputLayoutStyle"
    android:layout_width="256dp"
    android:layout_height="54dp"
    android:layout_marginTop="10dp"
    android:ems="10"
    android:fontFamily="@font/montserrat"
    app:boxStrokeColor="#56C596"
    android:textColorHint="#56C596"
    android:textColor="#56C596"
    app:hintTextColor="#56C596"
    android:inputType="textPassword"
    android:hint="Confirm Password"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/outlinedTextField"
    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    <com.google.android.material.textfield.TextInputEditText
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</com.google.android.material.textfield.TextInputLayout>

<TextView
    android:id="@+id/textView3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="20dp"
    android:fontFamily="sans-serif"
    android:text="Already have an account?"
    android:textAlignment="center"
    android:textColor="#68B2A0"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.369"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/next_one_btn" />

<TextView
    android:id="@+id/login_btn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:clickable="true"
    android:fontFamily="sans-serif"
    android:text=" Log in"
    android:textColor="#205072"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toEndOf="@+id/textView3"
    app:layout_constraintTop_toBottomOf="@+id/next_one_btn"
    android:focusable="true" />
</androidx.constraintlayout.widget.ConstraintLayout>