<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="97dp"
        android:layout_height="88dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/image" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="172dp"
        android:layout_height="63dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center_horizontal"
        android:text="Check Your Mail Box"
        android:textAlignment="center"
        android:textColor="#205072"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/text_verify"
        android:layout_width="213dp"
        android:layout_height="53dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/montserrat"
        android:text="Copy four digit number, which we just send you"
        android:textAlignment="center"
        android:textColor="#68B2A0"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/field1CardView"
        android:layout_width="70dp"
        android:layout_marginTop="92dp"
        android:layout_height="70dp"
        android:theme="@style/TextInputLayoutStyle"
        android:layout_gravity="center"
        app:errorEnabled="false"
        app:boxStrokeColor="#56C596"
        android:textColorHint="#56C596"
        android:textColor="#56C596"
        app:hintTextColor="#56C596"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintEnd_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/text_verify"
        app:boxStrokeErrorColor="#F75010">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/field1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_bold"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:singleLine="true"
            android:textColorHint="#56C596"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/field2CardView"
        android:layout_width="70dp"
        android:layout_marginTop="92dp"
        android:layout_height="70dp"
        android:theme="@style/TextInputLayoutStyle"
        android:layout_gravity="center"
        app:errorEnabled="false"
        app:boxStrokeColor="#56C596"
        android:textColorHint="#56C596"
        android:textColor="#56C596"
        app:hintTextColor="#56C596"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintEnd_toStartOf="@+id/field3CardView"
        app:layout_constraintStart_toEndOf="@+id/field1CardView"
        app:layout_constraintTop_toBottomOf="@+id/text_verify"
        app:boxStrokeErrorColor="#F75010">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/field2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_bold"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:singleLine="true"
            android:textColorHint="#56C596"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/field3CardView"
        android:layout_width="70dp"
        android:layout_marginTop="92dp"
        android:layout_height="70dp"
        android:theme="@style/TextInputLayoutStyle"
        android:layout_gravity="center"
        app:errorEnabled="false"
        app:boxStrokeColor="#56C596"
        android:textColorHint="#56C596"
        android:textColor="#56C596"
        app:hintTextColor="#56C596"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintEnd_toStartOf="@+id/field4CardView"
        app:layout_constraintStart_toEndOf="@+id/field2CardView"
        app:layout_constraintTop_toBottomOf="@+id/text_verify"
        app:boxStrokeErrorColor="#F75010">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/field3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_bold"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:singleLine="true"
            android:textColorHint="#56C596"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/field4CardView"
        android:layout_width="70dp"
        android:layout_marginTop="92dp"
        android:layout_height="70dp"
        android:theme="@style/TextInputLayoutStyle"
        android:layout_gravity="center"
        app:errorEnabled="false"
        app:boxStrokeColor="#56C596"
        android:textColorHint="#56C596"
        android:textColor="#56C596"
        app:hintTextColor="#56C596"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/text_verify"
        app:boxStrokeErrorColor="#F75010">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/field4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_bold"
            android:layout_gravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:maxLength="1"
            android:singleLine="true"
            android:textColorHint="#56C596"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.kofigyan.stateprogressbar.StateProgressBar
        android:id="@+id/your_state_progress_bar_id"
        android:layout_width="211dp"
        android:layout_height="27dp"
        android:layout_marginTop="132dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:spb_animateToCurrentProgressState="true"
        app:spb_checkStateCompleted="true"
        app:spb_currentStateDescriptionColor="#68B2A0"
        app:spb_currentStateNumber="three"
        app:spb_maxStateNumber="five"
        app:spb_stateBackgroundColor="#CDE0C9"
        app:spb_stateDescriptionColor="#808080"
        app:spb_stateForegroundColor="#68B2A0"
        app:spb_stateLineThickness="2dp"
        app:spb_stateNumberBackgroundColor="#ffffff"
        app:spb_stateNumberForegroundColor="#ffffff" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="I didnâ€™t receive the code,"
        android:textAlignment="center"
        android:textColor="#68B2A0"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.369"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/field2CardView" />

    <TextView
        android:id="@+id/reend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:fontFamily="sans-serif"
        android:text="Resend"
        android:textColor="#205072"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/field2CardView"
        android:focusable="true" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/next_one_btn"
        android:layout_width="256dp"
        android:layout_height="54dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_button"
        android:elevation="5dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="NEXT"
        android:textColor="#FFF"
        android:textSize="18sp"
        app:backgroundTint="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/your_state_progress_bar_id" />



    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:text="Already have an account?"
        android:textAlignment="center"
        android:textColor="#68B2A0"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.369"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next_one_btn" />

    <TextView
        android:id="@+id/login_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:clickable="true"
        android:fontFamily="sans-serif"
        android:text=" Log in"
        android:textColor="#205072"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/next_one_btn"
        android:focusable="true" />
</androidx.constraintlayout.widget.ConstraintLayout>